@model IEnumerable<ExpressNews.Models.Database.Article>
@using Microsoft.AspNetCore.Http
@inject Microsoft​.AspNetCore​.Http.IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext.Session;

 
    var isNext = 1;
    var randomColClass = "col-md-8";
}

<div class="container">
    <div class="row">
        @foreach (var row in Model)
        {
            @if (!row.IsBreaking)
            {
                @if (isNext == 1)
                {
                    randomColClass = "col-md-8";
                    isNext = 2;
                }
                else if (isNext == 2)
                {
                    randomColClass = "col-md-4";
                    isNext = 3;
                }
                else if (isNext == 3)
                {
                    randomColClass = "col-md-4";
                    isNext = 4;
                }
                else if (isNext == 4)
                {
                    randomColClass = "col-md-4";
                    isNext = 5;
                }
                else if (isNext == 5)
                {
                    randomColClass = "col-md-4 ";
                    isNext = 1;
                }

                <div class="@randomColClass mb-4 ">
                    <div class="p-3 border bg-white h-100">
                        <a href="#" style="color:black; text-decoration:none!important">
                            <h4 id="#" onclick="readMore(@Html.DisplayFor(item => row.Id))" class=" text-center p-2">
                                @Html.DisplayFor(item => row.HeadLine)
                            </h4>
                        </a>
                        <img src="@Html.DisplayFor(item => row.ImageLink)" alt="Article Image" class="img-fluid mb-3" />
                        <p>@Html.DisplayFor(item => row.ContentSummary)</p>

                        @if (row.IsSubsription)
                        {
                            @if (session.GetString("UserName") != null && session.GetString("IsSubcribedUser") == "Yes")
                            {
                                <button class="float-end mb-4" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="font-weight:600; color: black; background-color: yellow; border: 1px solid black; padding: 2px 5px; display: inline-block; cursor: pointer;border-radius: 5px;">
                                    <i class="fa-solid fa-plus"></i> Read More
                                </button>
                            }
                            else
                            {
                                <button class="float-end mb-4" onclick="readMoreSubscription(@Html.DisplayFor(item => row.Id))" style="font-weight:600; color: black; background-color: yellow; border: 1px solid black; padding: 2px 5px; display: inline-block; cursor: pointer;border-radius: 5px;">
                                    <i class="fa-solid fa-plus"></i> Read More
                                </button>
                            }
                        }
                        else
                        {
                            <button class="float-end mb-4" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="font-weight:600; color: white; background-color: #5656ed; border: 1px solid black; padding: 2px 5px; display: inline-block; cursor: pointer;border-radius: 5px; ">
                                Read More
                            </button>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    function readMore(id) {
        var paramID = id;
        window.location.href = '@Url.Action("SingleArticle", "Article", new { id = "__ID_PLACEHOLDER__" })'.replace("__ID_PLACEHOLDER__", paramID);
    }

    function readMoreSubscription(id) {
        var paramID = id;
        window.location.href = '@Url.Action("Index", "Subscription", new { id = "__ID_PLACEHOLDER__" })'.replace("__ID_PLACEHOLDER__", paramID);
    }
</script>


